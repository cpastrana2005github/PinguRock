@model IEnumerable<PinguRock.Models.ProveedorModel> 

@{
    ViewBag.Title = "Index";
}

<h2>Lista proveedores</h2>

<p>
    @Html.ActionLink("Agregar proveedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NIT de proveedor
        </th>
        <th>
            Nombre de proveedor
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NitProveedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreProveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdProveedor })
        </td>
    </tr>
}

</table>
