                @Html.EditorFor(model => model.PrecioProducto, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.PrecioProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NombreProveedorFK, htmlAttributes: new { @class = "control-label col-md-2" })
