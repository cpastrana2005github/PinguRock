@model PinguRock.Models.ProductosModel

@{
    ViewBag.Title = "Agregar producto";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Inventario PinguRock</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/sitedos.css" />
    <style>
        body {
            background: linear-gradient(135deg, #6b63ff 0%, #00a1ff 100%);
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
            max-width: 600px;
            width: 90%;
            text-align: center;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .form-horizontal {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 5px;
                text-align: left;
                width: 100%;
            }

            .form-group .form-control {
                width: 100%;
            }

        .btn-default {
            background-color: #ffae42;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
            margin-top: 10px;
        }

            .btn-default:hover {
                background-color: #e59d39;
            }

        .compact-group {
            margin-bottom: 10px;
        }

        .compact-control {
            max-width: 500px;
        }

        .compact-btn {
            margin-top: 10px;
        }

        .btn-color {
            background-color: #ffae42;
            color: #fff;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 20px;
        }

            .btn-color:hover {
                background-color: #e59d39;
            }
    </style>
</head>
<body>
    <div class="card">
        <h2>Agregar producto</h2>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group compact-group">
                    @Html.Label("Nombre del producto")
                    @Html.EditorFor(model => model.NombreProducto, new { htmlAttributes = new { @class = "form-control compact-control", placeholder = "Ingrese nombre del producto" } })
                    @Html.ValidationMessageFor(model => model.NombreProducto, "", new { @class = "text-danger" })
                </div>

                <div class="form-group compact-group">
                    @Html.Label("Precio de producto")
                    @Html.EditorFor(model => model.PrecioProducto, new { htmlAttributes = new { @type = "number", @class = "form-control compact-control", placeholder = "Ingrese precio del producto" } })
                    @Html.ValidationMessageFor(model => model.PrecioProducto, "", new { @class = "text-danger" })
                </div>

                <div class="form-group compact-group">
                    @Html.Label("Nombre proveedor")
                    @Html.DropDownListFor(model => model.NombreProveedorFK, (SelectList)ViewBag.NombreProveedores, "Selecciona un proveedor", new { @class = "form-control compact-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.NombreProveedorFK, "", new { @class = "text-danger" })
                </div>

                <div class="form-group compact-group">
                    @Html.Label("Cantidad en inventario")
                    @Html.EditorFor(model => model.CantidadProducto, new { htmlAttributes = new { @class = "form-control compact-control", placeholder = "Ingrese cantidad en inventario" } })
                    @Html.ValidationMessageFor(model => model.CantidadProducto, "", new { @class = "text-danger" })
                </div>

                <div class="form-group compact-group">
                    @Html.LabelFor(model => model.Estatus)
                    @Html.DropDownListFor(model => model.Estatus, new SelectList(new[] { "Continuado", "Descontinuado" }), "Selecciona un estatus", new { @class = "form-control compact-control" })
                    @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Crear" class="btn-default compact-btn" />
                </div>
            </div>
        }

        <div class="text-center">
            @Html.ActionLink("Volver", "Index", new { @class = "btn-color compact-btn" })
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
