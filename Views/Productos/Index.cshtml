@model IEnumerable<PinguRock.Models.ProductosModel>
<link href="~/Content/estadoStock.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Agregar nuevo producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Precio
        </th>
        <th>
            Nombre de proveedor
        </th>
        <th>
            Cantidad en inventario
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th>
            Estado de stock
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProveedorFK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                <span class="estado-stock-bolita @item.EstadoStock"></span>
            </td>
            <td>
                @Html.ActionLink("Editar información", "Edit", new { id = item.IdProducto })
            </td>
        </tr>
    }

</table>


